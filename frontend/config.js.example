// CloudOps Assistant Configuration Template
// Copy this file to config.js and update with your actual values

const CONFIG = {
    // API Configuration - Replace with your actual API Gateway URL
    // For development: use localhost, for production: use your domain
    API_BASE_URL: process.env.NODE_ENV === 'production'
        ? 'https://YOUR_PRODUCTION_API_URL_HERE/Prod'
        : 'https://YOUR_DEV_API_URL_HERE/Prod',

    // App Configuration
    APP_NAME: 'CloudOps Assistant',
    VERSION: '1.0.0',
    ENVIRONMENT: process.env.NODE_ENV || 'development',

    // Progress Tracking - Update daily
    CURRENT_DAY: 8,
    TOTAL_DAYS: 30,

    // Feature Flags - Enable as you build features
    FEATURES: {
        DRIFT_DETECTION: true,
        COST_DASHBOARD: true,
        BUDGET_ALERTS: true,
        BUDGET_MANAGEMENT: true,
        AI_ASSISTANT: true,
        MONITORING: false,
        AUTOMATION: false
    },

    // Default settings for auto-discovered repos
    AUTO_MONITOR_DEFAULTS: {
        terraform_dir: '.',
        schedule: 'daily',
        alert_email: 'your-email@example.com'
    },

    // GitHub Organizations/Users to auto-scan for terraform repos
    GITHUB_TARGETS: [
        'your-github-username'
    ],

    // GitHub token for private repo access (optional)
    GITHUB_TOKEN: null,  // Set to 'ghp_your_token_here' for private repos

    // Security Configuration
    MAX_FILE_SIZE: 10 * 1024 * 1024, // 10MB max file upload
    ALLOWED_FILE_TYPES: ['.txt', '.log', '.out', '.plan'],

    // Rate limiting (client-side)
    API_RATE_LIMIT: {
        requests: 10,
        windowMs: 60000 // 10 requests per minute
    }
};

// Input sanitization helper
CONFIG.sanitizeInput = function(input) {
    if (typeof input !== 'string') return input;
    return input.replace(/[<>\"'&]/g, '').substring(0, 1000);
};

// Make config globally available
window.CONFIG = CONFIG;
